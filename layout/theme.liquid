<!DOCTYPE html>
<html lang="{{ shop_locale.iso_code }}">
    <head>
        <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="{{ page_description | escape }}">
        <link rel="canonical" href="{{ canonical_url }}">
        <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        {{ content_for_header }} <!-- Header hook for plugins -->
        {{ 'application.scss.css' | asset_url | stylesheet_tag }}
        {{ 'application.js' | asset_url | script_tag }}
    </head>
    <body>
        <a href="#main">Skip to main content</a>

        <header>
            <nav>
                <a href="{{ shop.url }}">{{ shop.name }}</a>

                <ul>
                    {% for link in linklists.main-menu.links %}
                        <li>
                            {% assign child_list_handle = link.title | handleize %}
                            {% if linklists[child_list_handle].links != blank %}
                                <a href="{{ link.url }}">{{ link.title }}</a>
                                <ul>
                                    [{% for childlink in linklists[child_list_handle].links %}
                                        <li><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                                    {% endfor %}]
                                </ul>
                            {% else %}
                                <a href="{{ link.url }}">{{ link.title }}</a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </nav>

            <a href="/cart">Cart</a>

            {% if shop.customer_accounts_enabled %}
                {% if customer %}
                    <a href="/account">Account</a>
                    {{ 'Log Out'  | customer_logout_link }}
                {% else %}
                    {{ 'Log In ' | customer_login_link }}
                    {{ 'Sign Up' | customer_register_link }}
                {% endif %}
            {% endif %}
        </header>

        <main id="main" role="main">
            {{ content_for_layout }}
        </main>

        <footer>
            <address class="contact">
                <span class="contact__street">{{ shop.address.street }}</span>
                <span class="contact__city">{{ shop.address.city }}</span>,
                <span class="contact__state">{{ shop.address.province_code }}</span>
                <span class="contact__zip">{{ shop.address.zip }}</span>

                <a class="contact__phone" href="tel:{{ shop.phone }}">{{ shop.phone }}</a>
                <a class="contact__email" href="mailto:{{ shop.email }}">{{ shop.email }}</a>

                <a class="contact__instagram" href="https://www.instagram.com/victoriasmobileflowershop/">Instagram</a>
                <a class="contact__facebook" href="https://www.facebook.com/victoriasmobileflowershop">Facebook</a>
                <a class="contact__twitter" href="https://twitter.com/victoriaspgh">Twitter</a>
            </address>
        </footer>
    </body>
</html>
